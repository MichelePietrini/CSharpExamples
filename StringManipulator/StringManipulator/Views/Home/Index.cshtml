@{
    ViewData["Title"] = "Home Page";
}

<div class="container mx-auto p-4">
    <h1 class="text-center text-3xl font-bold mb-4">Trova la Parola Più Lunga</h1>
    <form asp-action="GetLongestWord" asp-controller="StringManipulatorMvc" method="get">
        <div class="mb-4">
            <label for="inputPhrase" class="block text-sm font-medium text-gray-700">Inserisci una frase:</label>
            <input type="text" class="form-input mt-1 block w-full" id="inputPhrase" name="input" placeholder="Inserisci qui la tua frase" required>
        </div>
        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Trova Parola Più Lunga</button>
    </form>
</div>

